@model TheSchool.Models.SignUpModel

@{
    Layout = null;
}


<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!-->
<html lang="en">
<!--<![endif]-->
<!-- BEGIN HEAD -->
<head>
    <meta charset="utf-8" />
    <title>The School | SignUp Page</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta content="" name="description" />
    <meta content="" name="author" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href='@Url.Content("~/assets/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.css")' rel="stylesheet" />
    <link rel="stylesheet" href=@Url.Content("~/assets/css/bootstrap-select.css")>
    <link href=@Url.Content("~/assets/plugins/bootstrap/css/bootstrap.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/plugins/bootstrap/css/bootstrap-responsive.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/plugins/font-awesome/css/font-awesome.min.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/css/style-metro.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/css/style.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/css/style-responsive.css") rel="stylesheet" type="text/css" />
    <link href=@Url.Content("~/assets/css/themes/default.css") rel="stylesheet" type="text/css" id="style_color" />
    <link href=@Url.Content("~/assets/plugins/uniform/css/uniform.default.css") rel="stylesheet" type="text/css" />
    <link rel="stylesheet" type="text/css" href=@Url.Content("~/assets/plugins/select2/select2_metro.css") />
    <!-- END GLOBAL MANDATORY STYLES -->
    <!-- BEGIN PAGE LEVEL STYLES -->
    <link href=@Url.Content("~/assets/css/pages/login.css") rel="stylesheet" type="text/css" />
    <link rel="shortcut icon" href="favicon.ico" />
</head>
<!-- END HEAD -->
<!-- BEGIN BODY -->
<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="@Url.Action("Login","Login")" style="text-decoration: none"><span style="color: #fff; font-weight: 400; font-size: x-large">The </span><span style="color: #f00; font-size: x-large">  School</span></a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <!-- BEGIN REGISTRATION FORM -->
        @using (Html.BeginForm("SignUP", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()

            <form class="form-vertical register-form" action="index.html" method="post">

                <div id="alertSuccess" class="alert alert-success hide">
                    <button class="close" data-dismiss="alert"></button>
                    <strong>Success!</strong> Saved Successfully.
                </div>
                <div id="alertFailed" class="alert alert-danger hide">
                    <button class="close" data-dismiss="alert"></button>
                    <strong>Error!</strong> Not saved!
                </div>
                <h3>Sign Up</h3>
                <p>Enter your personal details below:</p>
                <div class="control-group">
                    <label class="control-label visible-ie8 visible-ie9">Full Name</label>
                    <div class="controls">
                        <div class="input-icon left">
                            <i class="icon-font"></i>
                            @Html.TextBoxFor(model => model.Name, new { @class = "m-wrap placeholder-no-fix", @Placeholder = "Name", required = "required" })
                            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "help-inline" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Email</label>
                    <div class="controls">
                        <div class="input-icon left">
                            <i class="icon-envelope"></i>
                            @Html.TextBoxFor(model => model.Email, new { @class = "m-wrap placeholder-no-fix", @Placeholder = "Email", required = "required" })
                            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "help-inline" })
                        </div>
                    </div>
                </div>
                <p>Enter your account details below:</p>
                <div class="control-group">
                    <label class="control-label visible-ie8 visible-ie9">User Name</label>
                    <div class="controls">
                        <div class="input-icon left">
                            <i class="icon-user"></i>

                            @Html.TextBoxFor(model => model.UserName, new { @class = "m-wrap placeholder-no-fix", @Placeholder = "User Name", required = "required" })
                            @Html.ValidationMessageFor(model => model.UserName, null, new { @class = "help-inline" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label visible-ie8 visible-ie9">Password</label>
                    <div class="controls">
                        <div class="input-icon left ">
                            <i class="icon-lock"></i>
                            @Html.PasswordFor(model => model.Password, new { @class = "m-wrap placeholder-no-fix", @Placeholder = "Password", required = "required" })
                            @Html.ValidationMessageFor(model => model.Password, null, new { @class = "help-inline" })

                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>
                    <div class="controls">
                        <div class="input-icon left">
                            <i class="icon-ok"></i>
                            @Html.TextBoxFor(model => model.Designation, new { @class = "m-wrap placeholder-no-fix", @Placeholder = "Designation", required = "required" })
                            @Html.ValidationMessageFor(model => model.Designation, null, new { @class = "help-inline" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Upload Your Image", new { @class = "control-label col-md-2", required = "required" })
                    <div class="col-md-10">
                        <img id="image_upload_preview" width="140" height="140" src="~/Assets/Images/no_image.png" alt="Candidate Image" />
                    </div>
                    <div class="col-md-10">
                        <input type="file" name="productavatar" id="inputFile" onchange="ValidateFileUpload(this)" />
                    </div>
                </div>
                <div class="form-actions ">
                    <div class="form-actions no-color">
                        @Html.ActionLink("Login", "Login", "Login", new { @class = "btn green m-icon-swapleft" })
                        <button class="btn green pull-right" id="submit">
                            Sign Up <i class="m-icon-swapright m-icon-white"></i>
                        </button>
                    </div>
                </div>
            </form>
        }
        <!-- END REGISTRATION FORM -->
    </div>
    <!-- END LOGIN -->
    <!-- BEGIN COPYRIGHT -->
    <div class="copyright">
        @DateTime.Now.Year.ToString() &copy; The School, All Rights Reserved.
    </div>
    <!-- END COPYRIGHT -->
    <!-- BEGIN JAVASCRIPTS(Load javascripts at bottom, this will reduce page load time) -->
    <!-- BEGIN CORE PLUGINS -->
    <script src='@Url.Content("~/Scripts/jquery-1.8.2.min.js")'></script>
    <script src='@Url.Content("~/assets/plugins/jquery.tmpl/jquery.tmpl.min.js")'></script>
    <script src=@Url.Content("~/Scripts/bootstrap-select.js")></script>
    <script src='@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")'></script>
    <script src=@Url.Content("~/assets/plugins/jquery-1.10.1.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/plugins/jquery-migrate-1.2.1.min.js") type="text/javascript"></script>
    <!-- IMPORTANT! Load jquery-ui-1.10.1.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
    <script src=@Url.Content("~/assets/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/plugins/bootstrap/js/bootstrap.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/plugins/bootstrap-hover-dropdown/twitter-bootstrap-hover-dropdown.min.js") type="text/javascript"></script>
    <!--[if lt IE 9]>
    <script src=@Url.Content("~/assets/plugins/excanvas.min.js")></script>
    <script src=@Url.Content("~/assets/plugins/respond.min.js")></script>
    <![endif]-->
    <script src=@Url.Content("~/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/plugins/jquery.blockui.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/plugins/jquery.cookie.min.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/plugins/uniform/jquery.uniform.min.js") type="text/javascript"></script>
    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE LEVEL PLUGINS -->
    <script src=@Url.Content("~/assets/plugins/jquery-validation/dist/jquery.validate.min.js") type="text/javascript"></script>
    <script type="text/javascript" src=@Url.Content("~/assets/plugins/select2/select2.min.js")></script>
    <!-- END PAGE LEVEL PLUGINS -->
    <!-- BEGIN PAGE LEVEL SCRIPTS -->
    <script src=@Url.Content("~/assets/scripts/app.js") type="text/javascript"></script>
    <script src=@Url.Content("~/assets/scripts/login.js") type="text/javascript"></script>
    <!-- END PAGE LEVEL SCRIPTS -->
    <script src=@Url.Content("~/Scripts/MyScripts/MyScripts.js") type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {
            App.init();
        });
    </script>


    <script type="text/javascript">

        function ValidateFileUpload() {
            var fuData = document.getElementById('inputFile');
            var FileUploadPath = fuData.value;
            if (FileUploadPath == '') {
                alert("Please upload an image");

            } else {
                var Extension = FileUploadPath.substring(
                    FileUploadPath.lastIndexOf('.') + 1).toLowerCase();

                if (Extension == "jpeg" || Extension == "jpg") {
                    if (fuData.files && fuData.files[0]) {
                        var reader = new FileReader();

                        reader.onload = function (e) {
                            $('#image_upload_preview').attr('src', e.target.result);
                        }
                        reader.readAsDataURL(fuData.files[0]);
                    }
                }
                else {
                    alert("Image only allows file types of JPEG. ");
                }
            }
            var file_size = $('#inputFile')[0].files[0].size;
            if (file_size > 2097152) {
                alert("File size can be between 2 MB");
                return false;
            }
        }
    </script>

    <!-- END CORE PLUGINS -->
    <!-- BEGIN PAGE SCRIPTS -->
    <!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>